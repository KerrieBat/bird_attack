<div class="container">
  <% if @errors %>
       <div class="alert alert-danger">
         <ul>
           <% @errors.each_value do | error | %>
             <li><%= error[0] %></li>
           <% end %>
         </ul>
       </div>
  <% end %>

  <div class="form-signup">
    <div class="topbit center-align">Sign up</div>
    <%= form_tag '/signup', method: "post" do%>

           <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">email</i>
              <input name="email" type="text" id="icon_prefix" class="validate" >
              <label for="icon_prefix">email</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">account_circle</i>
              <input name="username" type="text" id="icon_prefix" class="validate">
              <label for="icon_prefix">username</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">lock</i>
              <input name="password" type="password" id="icon_prefix" class="validate" >
              <label for="icon_prefix">password</label>
            </div>
          </div>
        <div class="bottombit col s12 center-align">
          <button class="waves-effect waves-teal btn-flat">create account <i class="material-icons right">done</i></button>
        </div>
    <% end %>
        <div class="bottombit col s12 center-align">
          <p>already have an account? <span><a href="/login">Log in</a></span></p>
        </div>

        <div class="bottombit col s12 center-align">
          <a href="/" ><i class="material-icons prefix">home</i></a>

        </div>
  </div>


</div>
