<div class="container">

  <div class="form-signup">
    <h3>Create an account</h3>
    <%= form_tag '/signup', method: "post" do%>
      <div class="form-group">
        <label for="">Email Address</label>
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
          <input class="form-control" name="email" type="text" placeholder="email" required>
        </div>
      </div>
      <div class="form-group">
        <label for="">Username</label>
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-user fa-lg"></i></div>
          <input class="form-control" name="username" type="text" placeholder="username" required>
        </div>
      </div>
      <div class="form-group">
        <label for="">Password</label>
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-unlock-alt fa-lg" ></i></div>
          <input class="form-control" name="password" type="password" placeholder="password" required>
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary form-control">Create Account</button>
      </div>
    <% end %>
    <p>Already have an account? <span><a href="/login">Sign in</a></span></p>
  </div>

</div>
