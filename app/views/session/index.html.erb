<div class="container">
  <% if @errors %>
       <div class="alert alert-danger">
         <ul>
           <% @errors.each_value do | error | %>
             <li><%= error[0] %></li>
           <% end %>
         </ul>
       </div>
  <% end %>
  <div class="form-signin">
    <h3>Log in</h3>
    <%= form_tag '/login', method: "post" do %>
      <div class="form-group">
        <label for="">Email Address</label>
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
          <input class="form-control" name="email" type="text" placeholder="email" required>
        </div>
      </div>
      <div class="form-group">
        <label for="">Password</label>
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-unlock-alt fa-lg"></i></div>
          <input class="form-control" name="password" type="password" placeholder="password" required>
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary form-control">Log In</button>
      </div>
    <% end %>
    <p>Don't have an account? <span><a href="/signup">Sign Up</a></span></p>
  </div>

</div>
