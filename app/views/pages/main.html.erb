
<div class="container menu">
 <!-- menu -->

  <button class="mainpage-btn" id="dashboard" >my dashboard</button>
  <button class="mainpage-btn" id="newgame" >new game</button>

  <%= form_tag '/logout', method: 'post' do %>
    <button class="mainpage-btn" id="logout" >exit game</button>
  <% end %>

</div>


<div class="container dashboard">
<% #!-- dashboard, cards and stats -%>
  <%- #display of your stats -%>
  <div class="row">
    <div class="col s7"><h3>my dashboard</h3></div>
    <div class="col s5"><h3><%= @user.username %></h3></div>
  </div>
  <div class="row">
    <div class="col s6"><h4>Wins : <%= @user.stat.wins %></h4></div>
    <div class="col s6"><h4>Losses : <%= @user.stat.losses%></h4></div>
    <% #insert button(s) to navigate away -%>
    <button class="mainpage-btn" id="returnFromDashboard" >return</button>
  </div>


  <%- #display of your collection of cards -%>
  <div class="row">
    <% @user_cards.each do |card| %>
    <div class="col s12 m4">
      <div class="ui-card" data-id="<%= card.id %>">
        <div class="card-content white-text">
          <header class="content">
            <span class="avatar-details">
              <h3><%= card.name %></h3>
              <h4><%= card.special %></h4>
            </span>
          </header>
          <div class="avatar-image">
            <%=image_tag card.image_url %>
          </div>
            <div class="content">
              <div class="quality">
                <h4 class="col s6 m2">Earth</h4>
                <span class="col s6 m2"><%= card.earth %></span>
              </div>
              <h4>Wind</h4>
              <span class="right"><%= card.wind %></span>
              <h4>Fire</h4>
              <span class="pull-right"><%= card.fire %></span>
            </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <% @user_cards.each do |card| %>
    <div class="ui-card" data-id="<%= card.id %>">

      <header class="content">
        <span class="avatar-details">
          <h3><%= card.name %></h3>
          <h4><%= card.special %></h4>
        </span>
      </header>

      <div class="avatar-image">
        <%=image_tag card.image_url %>
      </div>

      <div class="content">
        <div class="power earth">
          <h4>Earth</h4>
          <span class="pull-right"><%= card.earth %></span>
        </div>
        <div class="power wind">
          <h4>Wind</h4>
          <span class="pull-right"><%= card.wind %></span>
        </div>
        <div class="power fire">
          <h4>Fire</h4>
          <span class="pull-right"><%= card.fire %></span>
        </div>
      </div>

    </div>
  <% end %>

</div>

<div class="newgame">
  <!-- contains spinner while we wait for a match -->
  <h2>waiting for match ....</h2>

  <div class="preloader-wrapper big active">
    <div class="spinner-layer spinner-blue-only">
      <div class="circle-clipper left">
        <div class="circle"></div>
      </div><div class="gap-patch">
        <div class="circle"></div>
      </div><div class="circle-clipper right">
        <div class="circle"></div>
      </div>
    </div>
  </div>
  <button class="mainpage-btn" id="returnFromGame" >return</button>

</div>


<%- #this displays the three cards sampled -%>
<div class="container play-card-screen" id="game">
  <h2 class="game-header">The Game</h2>
  <h4>Select a category from a card below to battle</h4>
  <div class="my-cards"></div>
<%- #handlebars appends 3 sampled cards from your collection using script below -%>
  <div class="chosen-card"></div>
</div>


<%-#this is the battle screen that displays the chosen cards after you select your card to play -%>
<div class="container battle-screen" id="battle-screen">
  <h2>Battle Screen</h2>
  <div class="your-card">
<%- #handlebars appends your chosen card using script below -%>
  </div>
  <div class="opponent-card">
<%- #handlebars appends your opponent's card using script below -%>
  </div>
</div>

<div class="container winner-screen" id="winner">
  <h1 class="outcome"></h1>

</div>

<%-# this is the template for each of the 3 cards sampled from your collection -%>
<script id="card-template" type="text/x-handlebars-template">
  <div class="ui-card" data-id={{id}}>
    <header class="content">
      <span class="avatar-details">
        <h2>{{ name }}</h2>
        <h3>{{ special }}</h3>
      </span>
    </header>

    <div class="avatar-image">
      <img src="/images/{{image_url}}">
    </div>

    <div class="content">
      <div class="power earth">
        <h4>Earth</h4>
        <span class="right">{{earth}}</span>
      </div>
      <div class="power wind">
        <h4>Wind</h4>
        <span class="right">{{wind}}</span>
      </div>
      <div class="power fire">
        <h4>Fire</h4>
        <span class="right">{{fire}}</span>
      </div>
    </div>

  </div>
</script>

<%-# this is the template for the chosen card that you want to play -%>
<script id="battle-card-template" type="text/x-handlebars-template">
  <div class="ui-card">
    <h2 class="card-name">{{name}}</h2>
    <h3 class="special">{{special}}</h3>
    <div class="avatar-image">
      <img src="/images/{{image_url}}">
    </div>
    <h3 class="power-name">{{powername}}</h3>
    <h4 class="power-val">{{powerval}}</h4>
  </div>
</script>
